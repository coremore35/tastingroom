<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ./partials/head.ejs %>
  </head>
  <body>
    <% include ./partials/hero.ejs %>
    <h1>Add New Boardgame</h1>

    <a href="/boardgames"><button>Back</button></a>

    <section class="section">
      <form action="/boardgames" method="POST">
        <div class="field">
          <label for="name" class="label is-medium">Game Title: </label>
          <div class="control">
            <input type="text" name="name" class="input" />
          </div>
        </div>

        <div class="field">
          <label for="own" class="label is-medium">Own: </label>
          <div class="control">
            <input type="checkbox" class="checkbox" name="own" />
          </div>
        </div>

        <div class="field ">
          <label for="wishList" class="label is-medium">Wish List: </label>

          <div class="control">
            <input type="checkbox" class="checkbox" name="wishList" />
          </div>
        </div>

        <div class="field">
          <label for="myRating" class="checkbox label is-medium"
            >My Rating:
          </label>

          <div class="control">
            <input
              type="number"
              name="myRating"
              min="1"
              max="10"
              class="input is-narrow"
            />
          </div>
        </div>

        <div class="field">
          <label for="gamePlayNotes" class="label number is-medium"
            >Game Play Notes:
          </label>
          <div class="control">
            <textarea
              name="gamePlayNotes"
              form="usrForm"
              class="textarea"
            ></textarea>
          </div>
        </div>

        <input
          type="submit"
          name="submit"
          value="submit"
          class="button is-success"
        />
      </form>
    </section>
    <% include ./partials/footer.ejs %>
  </body>
</html>
